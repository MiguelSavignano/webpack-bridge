{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "target": "ES2018",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
        "alwaysStrict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "outDir": "lib",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
